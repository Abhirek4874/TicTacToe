}


  function on() {
    document.getElementById("overlay").style.display = "block";
  }

  document.getElementById('control_01').addEventListener('change', ()=>{

    const playerOptions = document.getElementById('player-options');
        playerOptions.style.display = 'block'; 
        const player1input = document.getElementById('player1name');
        const player2input = document.getElementById('player2name');
        player1input.setAttribute('required',true);
        player2input.setAttribute('required',true);

        
  })

  let radioButton2 = document.getElementById('control_02');
  radioButton2.addEventListener("click", () => {
    const playerOptions = document.getElementById('player-options');
    playerOptions.style.display = 'none';
    const player1input = document.getElementById('player1name');
        const player2input = document.getElementById('player2name');
        player1input.removeAttribute('required');
        player2input.removeAttribute('required');
  })
</script>
